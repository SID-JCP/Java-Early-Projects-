<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="800.0" minWidth="1000.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.learnjavafx.HelloController">
   <Canvas height="232.0" width="200.0">
      <effect>
         <Shadow blurType="ONE_PASS_BOX" height="81.83" radius="43.3375" width="93.52" />
      </effect>
   </Canvas>
   <Button fx:id="button" contentDisplay="CENTER" mnemonicParsing="false" onAction="#print" text="Button" translateY="50.0">
      <font>
         <Font name="Arial" size="16.0" />
      </font>
      <tooltip>
         <Tooltip text="button to click" />
      </tooltip>
   </Button>

</VBox>
